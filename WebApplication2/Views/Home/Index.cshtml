@model HomeViewModel
<head>
    <title></title>
    <script src="~/js/slider.js"></script>
    <link rel="stylesheet" href="~/css/sliderStyle.css" />
</head>
<body style="margin:0;">
    <div id="Top" class="bg-img">
        <div id="Header">
            <ul>
                <li><a href="/Books/List"><b class="browse">BROWSE</b></a></li>
                <li><a href="#twitter"><span class="icon icon-twitter"></span></a></li>
                <li><a href="#facebook"><span class="icon icon-facebook"></span></a></li>
                <li><a href="#instagram"><span class="icon icon-instagram"></span></a></li>
                <li style="float:right"><a href="#profile"><img src="~/img/user.png" class="profile" alt="User"></a></li>
                <li style="float:right"><a href="/ShopCart/"><img src="~/img/basket.png" class="profile" alt="Basket"></a></li>
            </ul>
        </div>
        <div id="Search" class="search-box">
            <label>
                <input class="search-txt" type="text" name="search" placeholder="Type to Search">
            </label>
            <a class="search-btn" href="#search">
                <img src="~/img/search.png" class="search" alt="Search">
            </a>
        </div>
    </div>
    <div id="slideshow" class="slideshow-container">
        <div id="myslider">
            <img src="~/img/book_list.png">
            <img src="~/img/book_list.png">
            <img src="~/img/book_list.png">
        </div>
    </div>

    <h1>Ваши любимые книги</h1>

    <div class="row mt-5 mb-2">
        @{
            foreach (Book book in Model.favBooks)
            {

                if (book.favourite)
                {
                    @Html.Partial("AllFavouriteBooks", book)
                }
            }
            if (Model.favBooks.Count().Equals(0))
            {
                <h3>Вы не добавляли книг в избранное</h3>
            }

        }
    </div>
</body>
<script>
    simpleslider.getSlider({
        container: document.getElementById('myslider'),
        prop: 'left',
        init: 1900,
        show: 0,
        end: -1900,
        unit: 'px',
        delay: 4,
        duration: 2
    });
</script>